{
  "name": "terminal-ai-namer",
  "displayName": "Terminal AI Namer",
  "description": "AI-powered terminal naming - automatically generate meaningful terminal names based on executed commands",
  "version": "0.1.0",
  "publisher": "lif",
  "author": {
    "name": "lif"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/majiayu000/terminal-namer-vs-plugin"
  },
  "homepage": "https://github.com/majiayu000/terminal-namer-vs-plugin#readme",
  "bugs": {
    "url": "https://github.com/majiayu000/terminal-namer-vs-plugin/issues"
  },
  "keywords": [
    "terminal",
    "ai",
    "rename",
    "naming",
    "openrouter",
    "gpt",
    "gemini",
    "claude"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onView:terminalAiNamer.terminalList",
    "onView:terminalAiNamer.settingsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalAiNamer",
          "title": "Terminal AI Namer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "terminalAiNamer": [
        {
          "id": "terminalAiNamer.terminalList",
          "name": "终端列表",
          "type": "tree"
        },
        {
          "id": "terminalAiNamer.settingsView",
          "name": "快捷设置",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "terminalAiNamer.terminalList",
        "contents": "暂无打开的终端\n[打开终端](command:workbench.action.terminal.new)"
      }
    ],
    "commands": [
      {
        "command": "terminalAiNamer.openSettings",
        "title": "Terminal AI Namer: 打开设置"
      },
      {
        "command": "terminalAiNamer.renameTerminal",
        "title": "Terminal AI Namer: 重命名当前终端",
        "icon": "$(edit)"
      },
      {
        "command": "terminalAiNamer.renameAllTerminals",
        "title": "Terminal AI Namer: 重命名所有终端",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalAiNamer.refreshTerminalList",
        "title": "刷新终端列表",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalAiNamer.renameSelectedTerminal",
        "title": "AI 重命名",
        "icon": "$(sparkle)"
      },
      {
        "command": "terminalAiNamer.focusTerminal",
        "title": "切换到此终端",
        "icon": "$(arrow-right)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terminalAiNamer.refreshTerminalList",
          "when": "view == terminalAiNamer.terminalList",
          "group": "navigation"
        },
        {
          "command": "terminalAiNamer.renameAllTerminals",
          "when": "view == terminalAiNamer.terminalList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "terminalAiNamer.renameSelectedTerminal",
          "when": "view == terminalAiNamer.terminalList && viewItem == terminalWithCommands",
          "group": "inline"
        },
        {
          "command": "terminalAiNamer.focusTerminal",
          "when": "view == terminalAiNamer.terminalList",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Terminal AI Namer",
      "properties": {
        "terminalAiNamer.provider": {
          "type": "string",
          "default": "openrouter",
          "enum": [
            "openrouter",
            "openai",
            "claude",
            "ollama"
          ],
          "enumDescriptions": [
            "OpenRouter - 支持多种模型的统一 API",
            "OpenAI - GPT 系列模型",
            "Claude - Anthropic 的 Claude 模型",
            "Ollama - 本地运行的开源模型"
          ],
          "description": "选择 AI 服务提供商"
        },
        "terminalAiNamer.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key"
        },
        "terminalAiNamer.openrouterModel": {
          "type": "string",
          "default": "google/gemini-2.5-flash",
          "enum": [
            "google/gemini-2.5-flash",
            "google/gemini-2.5-pro",
            "google/gemini-2.0-flash-001",
            "anthropic/claude-3-haiku",
            "anthropic/claude-3.5-sonnet",
            "openai/gpt-4o-mini",
            "openai/gpt-4o",
            "meta-llama/llama-3.1-8b-instruct"
          ],
          "enumDescriptions": [
            "Gemini 2.5 Flash - 快速智能（推荐）",
            "Gemini 2.5 Pro - 最强",
            "Gemini 2.0 Flash - 便宜",
            "Claude 3 Haiku - 快速",
            "Claude 3.5 Sonnet - 高质量",
            "GPT-4o Mini - 快速",
            "GPT-4o - 高质量",
            "Llama 3.1 8B - 开源"
          ],
          "description": "OpenRouter 使用的模型"
        },
        "terminalAiNamer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "terminalAiNamer.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Claude API Key"
        },
        "terminalAiNamer.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama 服务地址"
        },
        "terminalAiNamer.ollamaModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Ollama 模型名称"
        },
        "terminalAiNamer.autoRename": {
          "type": "boolean",
          "default": true,
          "description": "是否自动命名（执行指定数量命令后）"
        },
        "terminalAiNamer.commandThreshold": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "触发自动命名的命令数量"
        },
        "terminalAiNamer.language": {
          "type": "string",
          "default": "zh",
          "enum": [
            "zh",
            "en"
          ],
          "enumDescriptions": [
            "中文",
            "English"
          ],
          "description": "命名语言"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openai": "^4.20.0"
  }
}